// src/pages/index.astro
import { getCollection } from 'astro:content';

// Fetch articles and videos from Keystatic
const allArticles = await getCollection('articles');
const allVideos = await getCollection('videos');

// Filter by published status and sort by date
const articles = allArticles
  .filter(article => !article.data.draft)
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime());

const videos = allVideos
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime());

// Separate by mode
const futureArticles = articles.filter(a => a.data.mode === 'future');
const pastArticles = articles.filter(a => a.data.mode === 'past');
const futureVideos = videos.filter(v => v.data.mode === 'future');
const pastVideos = videos.filter(v => v.data.mode === 'past');
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- SEO -->
    <title>The Chronoscope | Origins & Futures</title>
    <meta name="description" content="A digital observatory exploring the deep past and far future. Documentaries, analysis, and debates on human origins and destiny.">
    <meta name="keywords" content="history, future, technology, archeology, space, ai, civilization, ancient, mystery, moon, mars">
    
    <!-- Open Graph -->
    <meta property="og:title" content="The Chronoscope | Origins & Futures">
    <meta property="og:description" content="Exploring the jagged edges of human knowledge. From the Bronze Age collapse to the sociology of generation ships.">
    <meta property="og:type" content="website">
    <meta name="twitter:card" content="summary_large_image">
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700;900&family=Inter:wght@300;400;500;600&family=Orbitron:wght@400;700;900&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --void: #030303;
            --panel: #0a0a0a;
            --cyan: #22d3ee;
            --amber: #f59e0b;
        }
        
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        html { scroll-behavior: smooth; }
        
        body {
            background-color: var(--void);
            color: #e5e7eb;
            font-family: 'Inter', sans-serif;
            line-height: 1.6;
            transition: background-color 0.7s ease;
        }
        
        body.future-mode {
            cursor: crosshair;
            background-color: #030507;
        }
        
        body.past-mode {
            cursor: context-menu;
            background-color: #050403;
        }
        
        /* Scrollbar */
        ::-webkit-scrollbar { width: 8px; }
        ::-webkit-scrollbar-track { background: #030303; }
        ::-webkit-scrollbar-thumb { background: #333; border-radius: 4px; }
        ::-webkit-scrollbar-thumb:hover { background: #555; }
        
        /* Typography */
        h1, h2, h3 { font-family: 'Orbitron', sans-serif; font-weight: 900; }
        .title-cinzel { font-family: 'Cinzel', serif; }
        
        /* Layout */
        .container { max-width: 1280px; margin: 0 auto; padding: 0 1rem; }
        
        /* Navigation */
        nav {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 100;
            background: rgba(3, 3, 3, 0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid #1f1f1f;
        }
        
        .nav-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
            height: 64px;
        }
        
        .logo {
            font-size: 1.25rem;
            font-weight: 900;
            letter-spacing: 0.1em;
            text-transform: uppercase;
        }
        
        .mode-toggle {
            display: flex;
            gap: 0.5rem;
            background: #0f0f0f;
            padding: 0.25rem;
            border-radius: 9999px;
            border: 1px solid #333;
        }
        
        .mode-btn {
            padding: 0.5rem 1.5rem;
            border-radius: 9999px;
            border: none;
            background: transparent;
            color: #666;
            font-weight: 600;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            cursor: pointer;
            transition: all 0.3s;
        }
        
        .mode-btn.active.future {
            background: var(--cyan);
            color: #000;
        }
        
        .mode-btn.active.past {
            background: var(--amber);
            color: #000;
        }
        
        /* Hero */
        .hero {
            margin-top: 64px;
            padding: 8rem 0 4rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }
        
        .hero-title {
            font-size: clamp(2.5rem, 8vw, 6rem);
            font-weight: 900;
            margin-bottom: 1rem;
            letter-spacing: -0.02em;
        }
        
        .hero-subtitle {
            font-size: clamp(1rem, 2vw, 1.5rem);
            color: #888;
            margin-bottom: 3rem;
            font-weight: 300;
        }
        
        /* Scanline effect for future mode */
        .scanline-overlay {
            position: fixed;
            inset: 0;
            pointer-events: none;
            z-index: 50;
            background: linear-gradient(
                to bottom,
                rgba(255,255,255,0),
                rgba(255,255,255,0) 50%,
                rgba(0,0,0,0.2) 50%,
                rgba(0,0,0,0.2)
            );
            background-size: 100% 4px;
            animation: scanline 10s linear infinite;
            opacity: 0.3;
            mix-blend-mode: overlay;
        }
        
        @keyframes scanline {
            0% { transform: translateY(-100%); }
            100% { transform: translateY(100%); }
        }
        
        /* Paper texture for past mode */
        .paper-overlay {
            position: fixed;
            inset: 0;
            pointer-events: none;
            z-index: 40;
            background-image: url('https://www.transparenttextures.com/patterns/aged-paper.png');
            mix-blend-mode: soft-light;
            opacity: 0.2;
        }
        
        /* Section Headers */
        .section {
            padding: 4rem 0;
            scroll-margin-top: 80px;
        }
        
        .section-header {
            margin-bottom: 3rem;
        }
        
        .section-title {
            font-size: 2.5rem;
            font-weight: 900;
            letter-spacing: 0.05em;
            margin-bottom: 0.5rem;
        }
        
        .section-subtitle {
            color: #666;
            text-transform: uppercase;
            font-size: 0.875rem;
            letter-spacing: 0.1em;
            font-weight: 600;
        }
        
        /* Cards */
        .grid {
            display: grid;
            gap: 2rem;
        }
        
        .grid-2 { grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); }
        
        .card {
            background: var(--panel);
            border: 1px solid #1f1f1f;
            border-radius: 12px;
            overflow: hidden;
            transition: all 0.3s;
        }
        
        .card:hover {
            border-color: #333;
            transform: translateY(-4px);
        }
        
        .card-image {
            width: 100%;
            aspect-ratio: 16/9;
            object-fit: cover;
        }
        
        .card-content {
            padding: 1.5rem;
        }
        
        .card-title {
            font-size: 1.25rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: #fff;
        }
        
        .card-description {
            color: #888;
            font-size: 0.875rem;
            line-height: 1.5;
            margin-bottom: 1rem;
        }
        
        .card-meta {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }
        
        .tag {
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }
        
        .future-mode .tag {
            background: rgba(34, 211, 238, 0.1);
            color: var(--cyan);
            border: 1px solid rgba(34, 211, 238, 0.3);
        }
        
        .past-mode .tag {
            background: rgba(245, 158, 11, 0.1);
            color: var(--amber);
            border: 1px solid rgba(245, 158, 11, 0.3);
        }
        
        .read-more {
            display: inline-block;
            margin-top: 1rem;
            padding: 0.75rem 1.5rem;
            border-radius: 6px;
            font-weight: 600;
            font-size: 0.875rem;
            text-decoration: none;
            transition: all 0.3s;
        }
        
        .future-mode .read-more {
            background: rgba(34, 211, 238, 0.1);
            color: var(--cyan);
            border: 1px solid var(--cyan);
        }
        
        .future-mode .read-more:hover {
            background: var(--cyan);
            color: #000;
        }
        
        .past-mode .read-more {
            background: rgba(245, 158, 11, 0.1);
            color: var(--amber);
            border: 1px solid var(--amber);
        }
        
        .past-mode .read-more:hover {
            background: var(--amber);
            color: #000;
        }
        
        /* Footer */
        footer {
            border-top: 1px solid #1f1f1f;
            padding: 3rem 0;
            text-align: center;
            color: #666;
            font-size: 0.875rem;
        }
        
        /* Empty states */
        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            opacity: 0.5;
            font-family: 'Courier New', monospace;
            font-size: 0.875rem;
            border: 1px dashed #333;
            border-radius: 12px;
        }
    </style>
</head>

<body class="future-mode" id="body">
    <!-- Future mode scanline overlay -->
    <div class="scanline-overlay" id="scanline"></div>
    
    <!-- Past mode paper texture -->
    <div class="paper-overlay" id="paper" style="display: none;"></div>
    
    <!-- Navigation -->
    <nav>
        <div class="container">
            <div class="nav-content">
                <div class="logo title-cinzel">THE CHRONOSCOPE</div>
                <div class="mode-toggle">
                    <button class="mode-btn active future" id="future-btn">
                        ‚ö° Future
                    </button>
                    <button class="mode-btn past" id="past-btn">
                        üèõÔ∏è Past
                    </button>
                </div>
            </div>
        </div>
    </nav>
    
    <!-- Hero -->
    <section class="hero">
        <div class="container">
            <h1 class="hero-title">
                <span id="hero-text">ORIGINS & FUTURES</span>
            </h1>
            <p class="hero-subtitle">A Digital Observatory</p>
        </div>
    </section>
    
    <!-- Articles Section -->
    <section class="section" id="articles">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Articles</h2>
                <p class="section-subtitle">The Archive</p>
            </div>
            
            <div class="grid grid-2" id="articles-grid">
                {articles.length > 0 ? (
                    articles.map(article => (
                        <article class="card" data-mode={article.data.mode}>
                            {article.data.featuredImage && (
                                <img 
                                    src={article.data.featuredImage} 
                                    alt={article.data.featuredImageAlt || article.data.title}
                                    class="card-image"
                                />
                            )}
                            <div class="card-content">
                                <h3 class="card-title">{article.data.title}</h3>
                                <p class="card-description">{article.data.metaDescription}</p>
                                <div class="card-meta">
                                    {article.data.tags?.map(tag => (
                                        <span class="tag">{tag}</span>
                                    ))}
                                </div>
                                <a href={`/articles/${article.slug}`} class="read-more">
                                    Read Article ‚Üí
                                </a>
                            </div>
                        </article>
                    ))
                ) : (
                    <div class="empty-state">No written records found.</div>
                )}
            </div>
        </div>
    </section>
    
    <!-- Videos Section -->
    <section class="section" id="videos">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Visual Transmissions</h2>
                <p class="section-subtitle">Prime Episodes</p>
            </div>
            
            <div class="grid grid-2" id="videos-grid">
                {videos.length > 0 ? (
                    videos.map(video => (
                        <article class="card" data-mode={video.data.mode}>
                            {video.data.thumbnail ? (
                                <img 
                                    src={video.data.thumbnail} 
                                    alt={video.data.title}
                                    class="card-image"
                                />
                            ) : (
                                <img 
                                    src={`https://img.youtube.com/vi/${video.data.youtubeUrl.split('v=')[1]?.split('&')[0]}/maxresdefault.jpg`}
                                    alt={video.data.title}
                                    class="card-image"
                                />
                            )}
                            <div class="card-content">
                                <h3 class="card-title">{video.data.title}</h3>
                                <p class="card-description">{video.data.description}</p>
                                <a href={video.data.youtubeUrl} target="_blank" rel="noopener" class="read-more">
                                    Watch Video ‚Üí
                                </a>
                            </div>
                        </article>
                    ))
                ) : (
                    <div class="empty-state">No visual records found in this timeline.</div>
                )}
            </div>
        </div>
    </section>
    
    <!-- About Section -->
    <section class="section" id="about">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Mission Control</h2>
                <p class="section-subtitle">About</p>
            </div>
            <div class="card">
                <div class="card-content" style="padding: 3rem;">
                    <p style="font-size: 1.125rem; line-height: 1.8; margin-bottom: 1.5rem;">
                        <strong>The Chronoscope</strong> is a digital observatory exploring the deep past and far future 
                        of human civilization. We examine the archaeological record with the same rigor we apply to 
                        speculative futures.
                    </p>
                    <p style="color: #888; line-height: 1.8;">
                        From the Bronze Age collapse to the sociology of generation ships. From Denisovan genomics 
                        to post-human ethics. This is research-driven non-fiction for people who want to understand 
                        the full scope of the human story.
                    </p>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Footer -->
    <footer>
        <div class="container">
            <p>&copy; 2026 The Chronoscope | Origins & Futures</p>
        </div>
    </footer>
    
    <script>
        // Mode toggle functionality
        const body = document.getElementById('body');
        const futureBtn = document.getElementById('future-btn');
        const pastBtn = document.getElementById('past-btn');
        const scanline = document.getElementById('scanline');
        const paper = document.getElementById('paper');
        const heroText = document.getElementById('hero-text');
        const articlesGrid = document.getElementById('articles-grid');
        const videosGrid = document.getElementById('videos-grid');
        
        let currentMode = 'future';
        
        function setMode(mode) {
            currentMode = mode;
            
            // Update body class
            body.classList.remove('future-mode', 'past-mode');
            body.classList.add(`${mode}-mode`);
            
            // Update buttons
            futureBtn.classList.toggle('active', mode === 'future');
            pastBtn.classList.toggle('active', mode === 'past');
            
            // Toggle overlays
            scanline.style.display = mode === 'future' ? 'block' : 'none';
            paper.style.display = mode === 'past' ? 'block' : 'none';
            
            // Update hero text
            heroText.textContent = mode === 'future' ? 'ORIGINS & FUTURES' : 'ORIGINS & FUTURES';
            
            // Filter content
            filterContent();
        }
        
        function filterContent() {
            // Filter articles
            const articles = articlesGrid.querySelectorAll('.card');
            articles.forEach(card => {
                const cardMode = card.getAttribute('data-mode');
                card.style.display = cardMode === currentMode ? 'block' : 'none';
            });
            
            // Filter videos
            const videos = videosGrid.querySelectorAll('.card');
            videos.forEach(card => {
                const cardMode = card.getAttribute('data-mode');
                card.style.display = cardMode === currentMode ? 'block' : 'none';
            });
        }
        
        futureBtn.addEventListener('click', () => setMode('future'));
        pastBtn.addEventListener('click', () => setMode('past'));
        
        // Initialize with future mode and filter content
        setMode('future');
    </script>
</body>
</html>
