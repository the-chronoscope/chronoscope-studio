// src/pages/index.astro
import { getCollection } from 'astro:content';

// 1. Safe Data Fetching
const allArticles = await getCollection('articles').catch(() => []);
const allVideos = await getCollection('videos').catch(() => []);

// 2. Data Transformation
const articles = allArticles
  .filter(article => article.data.draft !== true)
  .map(article => ({
    ...article,
    slug: article.slug,
    data: {
      ...article.data,
      title: article.data.title || 'Untitled Record',
      // Map Keystatic image to frontend
      featuredImage: article.data.coverImage || article.data.featuredImage || null,
      metaDescription: article.data.metaDescription || article.data.subtitle || article.data.description || 'No briefing available.',
      tags: typeof article.data.keywords === 'string' 
        ? article.data.keywords.split(',').map(s => s.trim()).filter(s => s.length > 0)
        : (article.data.tags || []),
      publishDate: article.data.date || article.data.publishDate || new Date().toISOString(),
      mode: article.data.mode || 'future'
    }
  }))
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime());

const videos = allVideos
  .map(video => ({
    ...video,
    data: {
      ...video.data,
      youtubeId: getYouTubeId(video.data.youtubeUrl),
      mode: video.data.mode || 'future'
    }
  }))
  .sort((a, b) => new Date(b.data.publishDate || 0).getTime() - new Date(a.data.publishDate || 0).getTime());

// Helper: YouTube ID
function getYouTubeId(url) {
  if (!url) return null;
  const regExp = /^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|&v=)([^#&?]*).*/;
  const match = url.match(regExp);
  return (match && match[2].length === 11) ? match[2] : null;
}
