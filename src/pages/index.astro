<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>The Chronoscope | Origins & Futures</title>
    <meta name="description" content="A digital observatory exploring the deep past and far future.">
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700;900&family=Inter:wght@300;400;500;600&family=Orbitron:wght@400;700;900&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --c-void: #030303;
            --c-text: #e5e7eb;
            --c-cyan: #22d3ee;
            --c-cyan-dim: rgba(34, 211, 238, 0.1);
            --c-amber: #f59e0b;
            --c-amber-dim: rgba(245, 158, 11, 0.1);
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }
        html { scroll-behavior: smooth; }
        
        body {
            background: var(--c-void);
            color: var(--c-text);
            font-family: 'Inter', sans-serif;
            line-height: 1.6;
            overflow-x: hidden;
            transition: background-color 0.7s ease;
        }
        
        /* --- MODES --- */
        body.future-mode { background-color: #030507; }
        body.past-mode { background-color: #050403; }
        
        /* --- SCROLLBAR --- */
        ::-webkit-scrollbar { width: 8px; }
        ::-webkit-scrollbar-track { background: var(--c-void); }
        ::-webkit-scrollbar-thumb { background: #333; border-radius: 4px; }
        
        /* --- BACKGROUND FX --- */
        .scanline-overlay {
            position: fixed; inset: 0; pointer-events: none; z-index: 50;
            background: linear-gradient(to bottom, transparent 50%, rgba(0,0,0,0.3) 50%);
            background-size: 100% 4px;
            opacity: 0; mix-blend-mode: overlay; transition: opacity 0.7s;
        }
        .future-mode .scanline-overlay { opacity: 0.4; }
        
        .paper-overlay {
            position: fixed; inset: 0; pointer-events: none; z-index: 40;
            background-image: url('https://www.transparenttextures.com/patterns/aged-paper.png');
            opacity: 0; mix-blend-mode: overlay; transition: opacity 0.7s;
        }
        .past-mode .paper-overlay { opacity: 0.3; }

        .grid-bg {
            position: fixed; inset: 0; pointer-events: none; z-index: 1;
            background-image: 
                linear-gradient(rgba(34, 211, 238, 0.05) 1px, transparent 1px),
                linear-gradient(90deg, rgba(34, 211, 238, 0.05) 1px, transparent 1px);
            background-size: 50px 50px;
            opacity: 0; transition: opacity 0.7s;
        }
        .future-mode .grid-bg { opacity: 1; }
        
        /* --- NAV --- */
        nav {
            position: fixed; top: 0; left: 0; right: 0; z-index: 100;
            background: rgba(3, 3, 3, 0.9); backdrop-filter: blur(12px);
            border-bottom: 1px solid rgba(255,255,255,0.05);
            transition: border-color 0.7s;
        }
        .future-mode nav { border-bottom-color: rgba(34, 211, 238, 0.3); }
        .past-mode nav { border-bottom-color: rgba(245, 158, 11, 0.3); }
        
        .nav-content {
            display: flex; align-items: center; justify-content: space-between;
            height: 80px; padding: 0 5%;
        }
        
        .logo-section { display: flex; align-items: center; gap: 1rem; cursor: pointer; }
        
        .logo-icon {
            width: 40px; height: 40px; 
            transition: transform 0.7s cubic-bezier(0.4, 0, 0.2, 1);
        }
        .future-mode .logo-icon { transform: rotate(0deg); }
        .past-mode .logo-icon { transform: rotate(180deg); }
        
        .logo-text h1 {
            font-size: 1.25rem; font-weight: 900; letter-spacing: 0.1em;
        }
        .future-mode .logo-text h1 { font-family: 'Orbitron', sans-serif; }
        .past-mode .logo-text h1 { font-family: 'Cinzel', serif; }

        .logo-subtitle {
            font-size: 0.6rem; letter-spacing: 0.3em; text-transform: uppercase;
            transition: color 0.7s;
        }
        .future-mode .logo-subtitle { color: var(--c-cyan); }
        .past-mode .logo-subtitle { color: var(--c-amber); }

        /* --- MODE TOGGLE --- */
        .mode-toggle {
            position: relative; display: inline-flex; align-items: center;
            height: 28px; width: 140px; border-radius: 99px;
            border: 1px solid #333; background: rgba(0,0,0,0.5);
            cursor: pointer; overflow: hidden; margin-left: 1.5rem;
            transition: all 0.3s;
        }
        .future-mode .mode-toggle { border-color: var(--c-cyan); }
        .past-mode .mode-toggle { border-color: var(--c-amber); }

        .mode-slider {
            position: absolute; width: 50%; height: 100%; top: 0;
            background: #333; transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            z-index: 0;
        }
        .future-mode .mode-slider { 
            transform: translateX(100%); 
            background: linear-gradient(90deg, transparent, var(--c-cyan-dim));
            border-left: 2px solid var(--c-cyan);
        }
        .past-mode .mode-slider { 
            transform: translateX(0%); 
            background: linear-gradient(90deg, var(--c-amber-dim), transparent);
            border-right: 2px solid var(--c-amber);
        }

        .mode-labels {
            position: absolute; inset: 0; display: flex; justify-content: space-between;
            align-items: center; padding: 0 16px; font-size: 0.65rem;
            font-weight: 700; text-transform: uppercase; letter-spacing: 0.1em;
            pointer-events: none; z-index: 1;
        }
        
        /* --- LINKS --- */
        .nav-links { display: flex; gap: 2rem; }
        .nav-link {
            color: #888; text-decoration: none; font-size: 0.8rem;
            font-weight: 500; text-transform: uppercase; letter-spacing: 0.1em;
            transition: color 0.3s;
        }
        .nav-link:hover { color: #fff; }

        @media (max-width: 768px) {
            .nav-links { display: none; } /* Add mobile menu later */
            .mode-toggle { display: none; } /* Hide on small screens or relocate */
        }

        /* --- HERO --- */
        .hero {
            min-height: 80vh; display: flex; align-items: center; justify-content: center;
            text-align: center; position: relative; padding-top: 80px;
        }
        .hero-title {
            font-size: clamp(3rem, 10vw, 7rem); font-weight: 900;
            line-height: 1.1; margin-bottom: 1.5rem;
            background-clip: text; -webkit-background-clip: text;
            color: transparent; transition: all 1s;
        }
        .future-mode .hero-title {
            font-family: 'Orbitron', sans-serif;
            background-image: linear-gradient(to bottom, #fff, #999);
            text-shadow: 0 0 30px rgba(34, 211, 238, 0.3);
        }
        .past-mode .hero-title {
            font-family: 'Cinzel', serif;
            background-image: linear-gradient(to bottom, #fff, #d4d4d4);
            text-shadow: 0 0 30px rgba(245, 158, 11, 0.3);
        }

        /* --- CARDS --- */
        .container { max-width: 1400px; margin: 0 auto; padding: 0 2rem; }
        .grid { display: grid; gap: 2rem; grid-template-columns: repeat(auto-fill, minmax(350px, 1fr)); }
        
        .card {
            background: #080808; border: 1px solid #222; border-radius: 4px;
            overflow: hidden; transition: all 0.4s; position: relative;
        }
        .card:hover { transform: translateY(-5px); }
        .future-mode .card:hover { border-color: var(--c-cyan); box-shadow: 0 10px 40px -10px rgba(34,211,238,0.2); }
        .past-mode .card:hover { border-color: var(--c-amber); box-shadow: 0 10px 40px -10px rgba(245,158,11,0.2); }

        .card-image { width: 100%; aspect-ratio: 16/9; object-fit: cover; filter: grayscale(20%); transition: filter 0.4s; }
        .card:hover .card-image { filter: grayscale(0%); }

        .card-content { padding: 1.5rem; }
        .card-title { font-size: 1.4rem; margin-bottom: 0.5rem; color: #fff; }
        .future-mode .card-title { font-family: 'Orbitron', sans-serif; }
        .past-mode .card-title { font-family: 'Cinzel', serif; }

        .tag {
            font-size: 0.7rem; padding: 4px 8px; border: 1px solid #333;
            border-radius: 4px; text-transform: uppercase; margin-right: 8px;
        }
        
        .section-header { padding: 4rem 0 2rem; border-top: 1px solid #222; margin-top: 4rem; }
        .section-title { font-family: 'Orbitron', sans-serif; font-size: 2rem; }
        .past-mode .section-title { font-family: 'Cinzel', serif; }

    </style>
</head>

<!-- Default to future, script handles persistence -->
<body class="future-mode">

    <!-- FX Layers -->
    <canvas id="starfield" style="position: fixed; inset:0; z-index: 0; opacity: 0; transition: opacity 1s;"></canvas>
    <div class="scanline-overlay"></div>
    <div class="paper-overlay"></div>
    <div class="grid-bg"></div>

    <nav>
        <div class="nav-content">
            <div class="logo-section" id="mode-trigger">
                <div class="logo-icon">
                    <svg viewBox="0 0 100 100">
                        <defs>
                            <linearGradient id="g-fut" x1="0" y1="0" x2="1" y2="1"><stop offset="0" stop-color="#22d3ee"/><stop offset="1" stop-color="#0e7490"/></linearGradient>
                            <linearGradient id="g-pst" x1="0" y1="0" x2="1" y2="1"><stop offset="0" stop-color="#fbbf24"/><stop offset="1" stop-color="#b45309"/></linearGradient>
                        </defs>
                        <path d="M50 5 A 45 45 0 0 1 50 95 A 22.5 22.5 0 0 1 50 50 A 22.5 22.5 0 0 0 50 5" fill="url(#g-fut)" />
                        <path d="M50 95 A 45 45 0 0 1 50 5 A 22.5 22.5 0 0 1 50 50 A 22.5 22.5 0 0 0 50 95" fill="url(#g-pst)" />
                    </svg>
                </div>
                <div class="logo-text">
                    <h1>CHRONOSCOPE</h1>
                    <p class="logo-subtitle">Observatory</p>
                </div>
            </div>

            <div class="mode-toggle" id="mode-toggle-btn">
                <span class="mode-slider"></span>
                <div class="mode-labels">
                    <span>Past</span>
                    <span>Future</span>
                </div>
            </div>

            <div class="nav-links">
                <a href="#articles" class="nav-link">Archive</a>
                <a href="#videos" class="nav-link">Transmissions</a>
                <a href="/keystatic" class="nav-link" style="color: var(--c-cyan);">Login</a>
            </div>
        </div>
    </nav>

    <main>
        <section class="hero">
            <div class="container">
                <h1 class="hero-title">ORIGINS &<br>FUTURES</h1>
                <p style="opacity: 0.7; letter-spacing: 0.2em; text-transform: uppercase;">A Digital Observatory</p>
            </div>
        </section>

        <section class="container" id="articles">
            <div class="section-header">
                <h2 class="section-title">The Archive</h2>
            </div>
            <div class="grid">
                {articles.length > 0 ? articles.map(item => (
                    <article class="card" data-mode={item.data.mode}>
                        <div class="card-image-wrapper">
                            {item.data.featuredImage && (
                                <img src={item.data.featuredImage} class="card-image" loading="lazy" />
                            )}
                        </div>
                        <div class="card-content">
                            <h3 class="card-title">{item.data.title}</h3>
                            <div style="margin-bottom: 1rem;">
                                {item.data.tags.map(t => <span class="tag">{t}</span>)}
                            </div>
                            <p style="color:#888; font-size: 0.9rem;">{item.data.metaDescription}</p>
                        </div>
                    </article>
                )) : (
                    <div style="grid-column: 1/-1; padding: 4rem; border: 1px dashed #333; text-align: center; color: #666;">
                        ARCHIVE EMPTY // AWAITING DATA INPUT
                    </div>
                )}
            </div>
        </section>

        <section class="container" id="videos">
            <div class="section-header">
                <h2 class="section-title">Transmissions</h2>
            </div>
            <div class="grid">
                {videos.map(item => (
                    <a href={item.data.youtubeUrl} target="_blank" class="card" data-mode={item.data.mode} style="text-decoration: none;">
                        <div class="card-image-wrapper">
                            {item.data.youtubeId ? (
                                <img src={`https://img.youtube.com/vi/${item.data.youtubeId}/maxresdefault.jpg`} class="card-image" loading="lazy" />
                            ) : (
                                <div style="background: #222; height: 100%; display: flex; align-items: center; justify-content: center;">NO SIGNAL</div>
                            )}
                        </div>
                        <div class="card-content">
                            <h3 class="card-title">{item.data.title}</h3>
                            <p style="color:#888; font-size: 0.9rem;">{item.data.description}</p>
                        </div>
                    </a>
                ))}
            </div>
        </section>
    </main>

    <footer style="margin-top: 8rem; padding: 4rem 0; border-top: 1px solid #222; text-align: center; color: #444; font-size: 0.8rem; text-transform: uppercase; letter-spacing: 0.2em;">
        EST. 2026 // The Chronoscope
    </footer>

    <script>
        // --- PERSISTENCE & LOGIC ---
        const body = document.body;
        const toggleBtn = document.getElementById('mode-toggle-btn');
        const trigger = document.getElementById('mode-trigger');
        const canvas = document.getElementById('starfield');
        
        // 1. Load Saved State
        const savedMode = localStorage.getItem('chrono_mode') || 'future';
        setMode(savedMode);

        function setMode(mode) {
            body.classList.remove('future-mode', 'past-mode');
            body.classList.add(`${mode}-mode`);
            localStorage.setItem('chrono_mode', mode);
            
            // Toggle Canvas Visibility
            if(canvas) canvas.style.opacity = mode === 'future' ? '1' : '0';
        }

        // 2. Event Listeners
        if(toggleBtn) toggleBtn.addEventListener('click', () => {
            const newMode = body.classList.contains('future-mode') ? 'past' : 'future';
            setMode(newMode);
        });
        
        // Also toggle on logo click for ease
        if(trigger) trigger.addEventListener('click', () => {
             const newMode = body.classList.contains('future-mode') ? 'past' : 'future';
             setMode(newMode);
        });

        // 3. Simple Starfield (Performance Optimized)
        const ctx = canvas.getContext('2d');
        let width, height;
        let stars = [];

        function initStars() {
            width = canvas.width = window.innerWidth;
            height = canvas.height = window.innerHeight;
            stars = Array.from({length: 150}, () => ({
                x: Math.random() * width,
                y: Math.random() * height,
                size: Math.random() * 1.5,
                speed: Math.random() * 0.2 + 0.05
            }));
        }

        function animate() {
            if(body.classList.contains('past-mode')) {
                requestAnimationFrame(animate);
                return; // Pause rendering if hidden to save battery
            }
            
            ctx.clearRect(0, 0, width, height);
            ctx.fillStyle = '#22d3ee'; // Cyan stars
            
            stars.forEach(s => {
                ctx.globalAlpha = Math.random() * 0.5 + 0.3;
                ctx.beginPath();
                ctx.arc(s.x, s.y, s.size, 0, Math.PI*2);
                ctx.fill();
                s.y -= s.speed; // Move Up
                if(s.y < 0) s.y = height;
            });
            requestAnimationFrame(animate);
        }

        window.addEventListener('resize', initStars);
        initStars();
        animate();
    </script>
</body>
</html>
