---
// src/pages/articles/[...slug].astro
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const articles = await getCollection('articles');
  return articles.map(article => ({
    params: { slug: article.slug },
    props: { article },
  }));
}

const { article } = Astro.props;
const { Content } = await article.render();
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>{article.data.title} | The Chronoscope</title>
    <meta name="description" content={article.data.metaDescription}>
    
    <!-- Open Graph -->
    <meta property="og:title" content={article.data.title}>
    <meta property="og:description" content={article.data.metaDescription}>
    {article.data.featuredImage && <meta property="og:image" content={article.data.featuredImage}>}
    <meta property="og:type" content="article">
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700;900&family=Inter:wght@300;400;500;600&family=Orbitron:wght@400;700;900&display=swap" rel="stylesheet">
    
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body {
            background: #030303;
            color: #e5e7eb;
            font-family: 'Inter', sans-serif;
            line-height: 1.8;
        }
        
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }
        
        /* Navigation */
        nav {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 100;
            background: rgba(3, 3, 3, 0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid #1f1f1f;
        }
        
        .nav-content {
            max-width: 1280px;
            margin: 0 auto;
            padding: 0 1rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            height: 64px;
        }
        
        .logo {
            font-family: 'Cinzel', serif;
            font-size: 1.25rem;
            font-weight: 900;
            letter-spacing: 0.1em;
            text-decoration: none;
            color: #e5e7eb;
        }
        
        .back-btn {
            padding: 0.5rem 1rem;
            background: rgba(34, 211, 238, 0.1);
            border: 1px solid #22d3ee;
            color: #22d3ee;
            border-radius: 6px;
            text-decoration: none;
            font-size: 0.875rem;
            font-weight: 600;
            transition: all 0.3s;
        }
        
        .back-btn:hover {
            background: #22d3ee;
            color: #000;
        }
        
        /* Article Header */
        .article-header {
            margin-top: 80px;
            margin-bottom: 3rem;
        }
        
        .article-meta {
            display: flex;
            gap: 1rem;
            margin-bottom: 1rem;
            flex-wrap: wrap;
        }
        
        .tag {
            padding: 0.25rem 0.75rem;
            background: rgba(34, 211, 238, 0.1);
            border: 1px solid rgba(34, 211, 238, 0.3);
            color: #22d3ee;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }
        
        .article-title {
            font-family: 'Orbitron', sans-serif;
            font-size: clamp(2rem, 5vw, 3rem);
            font-weight: 900;
            margin-bottom: 1rem;
            line-height: 1.2;
        }
        
        .article-date {
            color: #888;
            font-size: 0.875rem;
        }
        
        .featured-image {
            width: 100%;
            border-radius: 12px;
            margin-bottom: 3rem;
            border: 1px solid #1f1f1f;
        }
        
        /* Article Content */
        .article-content {
            font-size: 1.125rem;
            line-height: 1.8;
        }
        
        .article-content h1 {
            font-family: 'Orbitron', sans-serif;
            font-size: 2em;
            font-weight: bold;
            color: white;
            margin-top: 2em;
            margin-bottom: 0.5em;
        }
        
        .article-content h2 {
            font-family: 'Orbitron', sans-serif;
            font-size: 1.5em;
            font-weight: bold;
            color: #e5e7eb;
            margin-top: 1.5em;
            margin-bottom: 0.5em;
        }
        
        .article-content h3 {
            font-size: 1.25em;
            font-weight: bold;
            color: #d1d5db;
            margin-top: 1.2em;
            margin-bottom: 0.5em;
        }
        
        .article-content p {
            margin-bottom: 1.5em;
        }
        
        .article-content a {
            color: #22d3ee;
            text-decoration: underline;
        }
        
        .article-content a:hover {
            color: #67e8f9;
        }
        
        .article-content ul,
        .article-content ol {
            margin-bottom: 1.5em;
            padding-left: 2em;
        }
        
        .article-content li {
            margin-bottom: 0.5em;
        }
        
        .article-content blockquote {
            border-left: 4px solid #374151;
            padding-left: 1.5em;
            margin: 2em 0;
            font-style: italic;
            color: #9ca3af;
        }
        
        .article-content img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
            margin: 2em 0;
            border: 1px solid #374151;
        }
        
        .article-content strong {
            color: white;
            font-weight: 600;
        }
        
        .article-content code {
            background: #1f1f1f;
            padding: 0.2em 0.4em;
            border-radius: 4px;
            font-size: 0.9em;
            font-family: 'Courier New', monospace;
        }
        
        .article-content pre {
            background: #1f1f1f;
            padding: 1.5em;
            border-radius: 8px;
            overflow-x: auto;
            margin: 2em 0;
        }
        
        .article-content pre code {
            background: none;
            padding: 0;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav>
        <div class="nav-content">
            <a href="/" class="logo">THE CHRONOSCOPE</a>
            <a href="/#articles" class="back-btn">‚Üê Back to Articles</a>
        </div>
    </nav>
    
    <!-- Article -->
    <article class="container">
        <header class="article-header">
            <div class="article-meta">
                {article.data.tags?.map(tag => (
                    <span class="tag">{tag}</span>
                ))}
            </div>
            <h1 class="article-title">{article.data.title}</h1>
            <time class="article-date">
                {new Date(article.data.publishDate).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                })}
            </time>
        </header>
        
        {article.data.featuredImage && (
            <img 
                src={article.data.featuredImage} 
                alt={article.data.featuredImageAlt || article.data.title}
                class="featured-image"
            />
        )}
        
        <div class="article-content">
            <Content />
        </div>
    </article>
</body>
</html>
