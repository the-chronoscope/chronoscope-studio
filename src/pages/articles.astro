---
// src/pages/articles.astro
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const allArticles = await getCollection('articles').catch(() => []);

const articles = allArticles
  .filter(article => article.data.draft !== true)
  .map(article => ({
    ...article,
    slug: article.slug,
    data: {
      ...article.data,
      title: article.data.title || 'Untitled Record',
      featuredImage: article.data.coverImage || article.data.featuredImage || null,
      description: article.data.subtitle || article.data.metaDescription || 'No briefing available.',
      tags: typeof article.data.keywords === 'string' 
        ? article.data.keywords.split(',').map(s => s.trim()).filter(s => s.length > 0)
        : (article.data.tags || []),
      publishDate: article.data.date || article.data.publishDate || new Date().toISOString(),
      mode: article.data.mode || 'future'
    }
  }))
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime());
---

<Layout title="Archive | The Chronoscope">
    <style>
        nav { position: fixed; top: 0; left: 0; right: 0; z-index: 100; background: rgba(5, 5, 5, 0.9); backdrop-filter: blur(12px); border-bottom: 1px solid rgba(255,255,255,0.05); }
        .nav-content { display: flex; align-items: center; height: 64px; padding: 0 2rem; gap: 2rem; max-width: 1600px; margin: 0 auto; justify-content: flex-start; position: relative; }
        
        .logo-section { display: flex; align-items: center; gap: 0.8rem; cursor: pointer; flex-shrink: 0; text-decoration: none; }
        .logo-icon { width: 32px; height: 32px; transition: transform 0.7s; }
        :global(.future-mode) .logo-icon { transform: rotate(0deg); } 
        :global(.past-mode) .logo-icon { transform: rotate(180deg); }

        .logo-brand { font-size: 1.1rem; font-weight: 800; letter-spacing: 0.1em; margin: 0; line-height: 1; color: #fff; }
        :global(.future-mode) .logo-brand { font-family: 'Orbitron', sans-serif; } 
        :global(.past-mode) .logo-brand { font-family: 'Cinzel', serif; }
        
        .logo-subtitle { font-size: 0.55rem; letter-spacing: 0.3em; text-transform: uppercase; margin: 0; opacity: 0.8; }
        :global(.future-mode) .logo-subtitle { color: var(--c-cyan); } 
        :global(.past-mode) .logo-subtitle { color: var(--c-amber); }

        /* TOGGLE */
        .mode-toggle { position: relative; display: flex; align-items: center; justify-content: space-between; height: 28px; width: 140px; border-radius: 99px; background: #000; border: 1px solid #333; cursor: pointer; overflow: hidden; transition: all 0.3s; padding: 2px; flex-shrink: 0; }
        .mode-toggle:hover { border-color: #555; }
        :global(.future-mode) .mode-toggle { border-color: var(--c-cyan); } 
        :global(.past-mode) .mode-toggle { border-color: var(--c-amber); }
        
        .toggle-thumb { width: 50%; height: 100%; border-radius: 99px; background: #333; position: absolute; top: 0; left: 0; transition: transform 0.4s cubic-bezier(0.25, 1, 0.5, 1), background-color 0.4s; z-index: 1; opacity: 0.2; }
        :global(.future-mode) .toggle-thumb { transform: translateX(100%); background: var(--c-cyan); } 
        :global(.past-mode) .toggle-thumb { transform: translateX(0%); background: var(--c-amber); }
        
        .toggle-labels { display: flex; width: 100%; justify-content: space-between; padding: 0 16px; font-size: 0.65rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.1em; z-index: 2; pointer-events: none; position: absolute; }
        .toggle-labels span { transition: color 0.3s; }
        :global(.future-mode) .toggle-labels span:last-child { color: var(--c-cyan); text-shadow: 0 0 5px var(--c-cyan-glow); } 
        :global(.future-mode) .toggle-labels span:first-child { color: #444; }
        :global(.past-mode) .toggle-labels span:first-child { color: var(--c-amber); text-shadow: 0 0 5px var(--c-amber-glow); } 
        :global(.past-mode) .toggle-labels span:last-child { color: #444; }

        .nav-links { display: flex; gap: 1.5rem; align-items: center; margin-left: 1rem; }
        .nav-link { color: #888; text-decoration: none; font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.1em; transition: color 0.3s; }
        .nav-link:hover { color: #fff; }

        @media (max-width: 768px) {
            .nav-content { padding: 0 1rem; gap: 1rem; } .logo-text { display: none; } .nav-links { gap: 1rem; margin-left: 0; }
            .mode-toggle { width: 100px; } .toggle-labels { font-size: 0.55rem; padding: 0 8px; }
        }

        /* PAGE SPECIFIC */
        main { position: relative; z-index: 10; padding-top: 120px; }
        .container { max-width: 1600px; margin: 0 auto; padding: 0 2rem; position: relative; z-index: 10; }
        .grid { display: grid; gap: 1.5rem; grid-template-columns: repeat(auto-fill, minmax(320px, 1fr)); }
        
        .card { background: rgba(10, 10, 10, 0.6); border: 1px solid #222; border-radius: 4px; backdrop-filter: blur(10px); overflow: hidden; transition: all 0.4s; position: relative; display: flex; flex-direction: column; text-decoration: none; color: inherit; height: 100%; }
        .card:hover { transform: translateY(-4px); background: rgba(20, 20, 20, 0.8); }
        :global(.future-mode) .card:hover { border-color: var(--c-cyan); box-shadow: 0 10px 30px -10px var(--c-cyan-glow); }
        :global(.past-mode) .card:hover { border-color: var(--c-amber); box-shadow: 0 10px 30px -10px var(--c-amber-glow); }
        
        .card-image-wrapper { width: 100%; aspect-ratio: 16/9; overflow: hidden; background: #111; }
        .card-image { width: 100%; height: 100%; object-fit: cover; filter: grayscale(40%) contrast(1.1); transition: filter 0.4s; }
        .card:hover .card-image { filter: grayscale(0%) contrast(1); }
        .card-content { padding: 1.5rem; flex: 1; display: flex; flex-direction: column; }
        .card-title { font-size: 1.1rem; margin-bottom: 0.5rem; color: #fff; line-height: 1.3; }
        :global(.future-mode) .card-title { font-family: 'Orbitron', sans-serif; letter-spacing: 0.02em; }
        :global(.past-mode) .card-title { font-family: 'Cinzel', serif; font-weight: 700; }
        
        .tag { font-size: 0.6rem; padding: 2px 6px; border: 1px solid #333; border-radius: 2px; text-transform: uppercase; margin-right: 6px; display: inline-block; letter-spacing: 0.05em; color: #888; margin-bottom: 0.75rem; }
        .card-desc { color:#888; font-size: 0.85rem; line-height: 1.6; display: -webkit-box; -webkit-line-clamp: 5; -webkit-box-orient: vertical; overflow: hidden; min-height: 4.5rem; }
        
        .section-header { padding: 0 0 1.5rem; border-top: 1px solid #222; margin-bottom: 2rem; display: flex; align-items: baseline; gap: 1rem; }
        .section-title { font-family: 'Orbitron', sans-serif; font-size: 1.5rem; color: #fff; }
        :global(.past-mode) .section-title { font-family: 'Cinzel', serif; }
        .section-subtitle { font-family: 'Inter', sans-serif; color: #666; text-transform: uppercase; letter-spacing: 0.1em; font-size: 0.75rem; }
    </style>

    <script is:inline>
        const urlParams = new URLSearchParams(window.location.search);
        const urlMode = urlParams.get('mode');
        const saved = urlMode || localStorage.getItem('chrono_mode') || 'future';
        document.body.classList.remove('future-mode', 'past-mode');
        document.body.classList.add(saved + '-mode');
        if (urlMode) localStorage.setItem('chrono_mode', urlMode);
    </script>

    <canvas id="starfield"></canvas>
    <div class="grid-bg"></div>
    <div class="paper-overlay"></div>
    <div class="scanline-overlay"></div>

    <nav>
        <div class="nav-content">
            <a href="/" class="logo-section" id="mode-trigger">
                <div class="logo-icon">
                    <svg viewBox="0 0 100 100">
                        <defs><linearGradient id="g-fut" x1="0" y1="0" x2="1" y2="1"><stop offset="0" stop-color="#22d3ee"/><stop offset="1" stop-color="#0e7490"/></linearGradient><linearGradient id="g-pst" x1="0" y1="0" x2="1" y2="1"><stop offset="0" stop-color="#fbbf24"/><stop offset="1" stop-color="#b45309"/></linearGradient></defs>
                        <path d="M50 5 A 45 45 0 0 1 50 95 A 22.5 22.5 0 0 1 50 50 A 22.5 22.5 0 0 0 50 5" fill="url(#g-fut)" />
                        <path d="M50 95 A 45 45 0 0 1 50 5 A 22.5 22.5 0 0 1 50 50 A 22.5 22.5 0 0 0 50 95" fill="url(#g-pst)" />
                    </svg>
                </div>
                <div class="logo-text">
                    <div class="logo-brand">CHRONOSCOPE</div>
                    <p class="logo-subtitle" id="logo-subtitle">Observatory</p>
                </div>
            </a>
            <div class="mode-toggle" id="mode-toggle-btn"><div class="toggle-thumb"></div><div class="toggle-labels"><span>Past</span><span>Future</span></div></div>
            <div class="nav-links">
                <a href="/" class="nav-link">Home</a>
                <a href="/articles" class="nav-link" style="color:#fff;">Archive</a>
                <a href="/videos" class="nav-link">Transmissions</a>
                <a href="/about" class="nav-link">About</a>
                <a href="/keystatic" class="nav-link" style="color: var(--c-cyan);">Login</a>
            </div>
        </div>
    </nav>
    <main>
        <section class="container" id="articles">
            <div class="section-header">
                <h2 class="section-title">Full Archive</h2>
                <span class="section-subtitle">// All Records</span>
            </div>
            <div class="grid" id="articles-grid">
                {articles.length > 0 ? articles.map(item => (
                    <a href={`/articles/${item.slug}`} class="card searchable-item" data-mode={item.data.mode} data-title={item.data.title.toLowerCase()} data-desc={item.data.description.toLowerCase()}>
                        <div class="card-image-wrapper">
                            {item.data.featuredImage && <img src={item.data.featuredImage} class="card-image" loading="lazy" alt={item.data.title} />}
                        </div>
                        <div class="card-content">
                            <h3 class="card-title">{item.data.title}</h3>
                            <div style="margin-bottom: 0.5rem;">{item.data.tags.slice(0, 3).map(t => <span class="tag">{t}</span>)}</div>
                            <p class="card-desc">{item.data.description}</p>
                        </div>
                    </a>
                )) : (
                    <div style="grid-column: 1/-1; padding: 4rem; border: 1px dashed #333; text-align: center; color: #666;">ARCHIVE EMPTY</div>
                )}
            </div>
        </section>
    </main>
    <footer style="margin-top: 8rem; padding: 4rem 0; border-top: 1px solid #222; text-align: center; color: #444; font-size: 0.8rem; text-transform: uppercase; letter-spacing: 0.2em;">EST. 2026 // The Chronoscope</footer>

    <script>
        const body = document.body;
        const toggleBtn = document.getElementById('mode-toggle-btn');
        const trigger = document.getElementById('mode-trigger');
        const canvas = document.getElementById('starfield');
        
        const currentMode = body.classList.contains('future-mode') ? 'future' : 'past';
        updateVisuals(currentMode);

        function setMode(mode) {
            body.classList.remove('future-mode', 'past-mode'); body.classList.add(`${mode}-mode`);
            localStorage.setItem('chrono_mode', mode); updateVisuals(mode);
            const url = new URL(window.location);
            if (url.searchParams.has('mode')) { url.searchParams.delete('mode'); window.history.replaceState({}, '', url); }
        }

        function updateVisuals(mode) {
            if(canvas) canvas.style.opacity = mode === 'future' ? '1' : '0';
            const sub = document.getElementById('logo-subtitle');
            if(sub) sub.textContent = mode === 'future' ? 'Forward Operating Base' : 'The Ancient Archive';
        }

        [toggleBtn, trigger].forEach(el => { if(el) el.addEventListener('click', () => { const newMode = body.classList.contains('future-mode') ? 'past' : 'future'; setMode(newMode); }); });

        const ctx = canvas.getContext('2d');
        let width, height, stars = [];
        function initStars() { width = canvas.width = window.innerWidth; height = canvas.height = window.innerHeight; stars = Array.from({length: 120}, () => ({ x: Math.random() * width, y: Math.random() * height, size: Math.random() * 1.5, speed: Math.random() * 0.15 + 0.05, alpha: Math.random() })); }
        function animate() {
            if(body.classList.contains('past-mode')) { requestAnimationFrame(animate); return; }
            ctx.clearRect(0, 0, width, height);
            stars.forEach(s => { ctx.fillStyle = `rgba(34, 211, 238, ${s.alpha})`; ctx.beginPath(); ctx.arc(s.x, s.y, s.size, 0, Math.PI*2); ctx.fill(); s.y -= s.speed; if(s.y < 0) s.y = height; });
            requestAnimationFrame(animate);
        }
        window.addEventListener('resize', initStars); initStars(); animate();
    </script>
</Layout>
